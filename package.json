    "@storybook/addons": "6.1.10",
    "@storybook/preset-typescript": "3.0.0",
    "@storybook/react": "6.1.10",
    "@types/classnames": "2.3.0",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.6",
